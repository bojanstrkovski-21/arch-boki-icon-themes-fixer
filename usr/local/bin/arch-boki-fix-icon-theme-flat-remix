if [ -d /usr/share/icons/Flat-Remix-Black-Dark ]; then
	FIND="Inherits=breeze-dark,elementary,gnome,hicolor"
	REPLACE="Inherits=breeze-dark,elementary,gnome,Surfn,hicolor"	
	
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Black-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Blue-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Brown-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Cyan-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Green-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Grey-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Magenta-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Orange-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Red-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Teal-Dark/index.theme	
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Violet-Dark/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Yellow-Dark/index.theme

	FIND="Inherits=breeze,elementary,gnome,hicolor"
	REPLACE="Inherits=breeze,elementary,gnome,Surfn,hicolor"	

	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Black-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Blue-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Brown-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Cyan-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Green-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Grey-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Magenta-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Orange-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Red-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Teal-Light/index.theme	
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Violet-Light/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Yellow-Light/index.theme

	FIND="Inherits=breeze,elementary,gnome,hicolor"
	REPLACE="Inherits=breeze,elementary,gnome,Surfn,hicolor"	

	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Black-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Blue-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Brown-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Cyan-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Green-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Grey-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Magenta-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Orange-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Red-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Teal-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Violet-Light-darkPanel/index.theme
	sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/icons/Flat-Remix-Yellow-Light-darkPanel/index.theme


	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Black-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Black-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Black-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Blue-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Blue-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Blue-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Brown-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Brown-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Brown-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Cyan-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Cyan-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Cyan-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Green-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Green-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Green-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Grey-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Grey-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Grey-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Magenta-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Magenta-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Magenta-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Orange-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Orange-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Orange-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Red-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Red-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Red-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Teal-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Teal-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Teal-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Violet-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Violet-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Violet-Light-darkPanel
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Yellow-Dark
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Yellow-Light
	gtk-update-icon-cache -q /usr/share/icons/Flat-Remix-Yellow-Light-darkPanel

fi
